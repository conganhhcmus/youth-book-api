{
    "exclude": ["node_modules", "test", "dist", "./*config.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "lib": ["es2015"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
